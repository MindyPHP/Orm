<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="template.finder.theme" class="Mindy\Bundle\TemplateBundle\TemplateFinder\ThemeTemplateFinder">
            <argument key="base_path">%kernel.root_dir%/Resources</argument>
            <argument key="theme">%template.theme.theme%</argument>
            <argument key="templates_dir">templates</argument>
        </service>
    </services>
</container>
